@using AdvertisingPortal.Core.Models.Domains;

@model IEnumerable<AdvertisingPortal.Core.Models.Domains.Image>

@if (Model.Count() > 0 && ViewBag.UserId is not null)
{
    <h1>Lista zdjęć</h1>
}


<div class="mt-5 row">
    @foreach (Image image in Model)
    {
        <div class="col-md-4">
            <div id="img" class="gallery">

                @{
                    var base64 = Convert.ToBase64String(image.Data);
                    var img = String.Format("data:image/jpg;base64,{0}", base64);
                }
                <a class="big" href="@img" rel="rel1">
                    <img src="@img" class="img-thumbnail" alt="@image.Name" title="@img">
                </a>
                @* @Html.ActionLink("Powiększ", "EnlargeShowcaseImage", "Image", new { id = image.Id }, new { @class = "enlargeImage" }) *@
            </div>
            <div>
                @if (ViewBag.UserId is not null)
                {
                    <button class="btn btn-danger btn-sm" style="float:right" onclick="deleteImage('@image.Id',this)">Usuń</button>
                }
            </div>
        </div>

    }
</div>